<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="agh.oop.pokemon.controllers.PokemonController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane fx:id="grid" alignment="CENTER" gridLinesVisible="true" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="20.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="20.0" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <GridPane fx:id="innerGrid" GridPane.rowIndex="6">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Super" GridPane.rowIndex="2"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ultra" GridPane.rowIndex="3"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Attack types" GridPane.columnSpan="2"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Normal" GridPane.rowIndex="1"/>
        </GridPane>
        <Button fx:id="stateButton" maxHeight="Infinity" maxWidth="Infinity" mnemonicParsing="false" text="Choose!"
                GridPane.rowIndex="7"/>
    </GridPane>
</VBox>