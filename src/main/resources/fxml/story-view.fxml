<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="agh.oop.pokemon.controllers.StoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane fx:id="grid" VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="75"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="25"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="50" vgrow="SOMETIMES"/>
            <RowConstraints percentHeight="50" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="You, aspiring hero">
                <font>
                    <Font name="BM HANNA 11yrs old OTF" size="35.0"/>
                </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Your name is Tom the Trainer. You want to become the best pokemon trainer in the world. To achive that u must train your friend and a first pokemon Bulbasaur. Beware because Gengar th Might stands on your way..."
                  wrappingWidth="400.0"/>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Big bad boss Gengar">
                <font>
                    <Font name="BM HANNA 11yrs old OTF" size="35.0"/>
                </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Your archnemezis, strongest pokemon in the world. If you beat him you will for sure prove worthy. &quot;Under a full moon, this POKEMON likes to mimic the shadows of people and laugh at their fright.&quot; ~Random person"
                  wrappingWidth="400.0"/>
        </VBox>
    </GridPane>
    <Button fx:id="menuButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
            text="Go back to menu"/>
</VBox>
